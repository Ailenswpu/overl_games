<%= simple_form_for(@admin_post) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :title %>
    <%= f.input :description %>
    <%= f.input :icon %>
    <%= f.input :user_id %>
    <%= f.input :ios %>
    <%= f.input :android %>
    <%= f.input :windows %>
    <%= f.input :web %>
    <%= f.input :visit %>
    <%= f.input :category_id %>
    <%= f.input :comments_count %>
    <%= f.input :votes_count %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
