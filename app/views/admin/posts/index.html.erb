<h1>Listing admin_posts</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Icon</th>
      <th>User</th>
      <th>Ios</th>
      <th>Android</th>
      <th>Windows</th>
      <th>Web</th>
      <th>Visit</th>
      <th>Category</th>
      <th>Comments count</th>
      <th>Votes count</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @admin_posts.each do |admin_post| %>
      <tr>
        <td><%= admin_post.title %></td>
        <td><%= admin_post.description %></td>
        <td><%= admin_post.icon %></td>
        <td><%= admin_post.user_id %></td>
        <td><%= admin_post.ios %></td>
        <td><%= admin_post.android %></td>
        <td><%= admin_post.windows %></td>
        <td><%= admin_post.web %></td>
        <td><%= admin_post.visit %></td>
        <td><%= admin_post.category_id %></td>
        <td><%= admin_post.comments_count %></td>
        <td><%= admin_post.votes_count %></td>
        <td><%= link_to 'Show', admin_post %></td>
        <td><%= link_to 'Edit', edit_admin_post_path(admin_post) %></td>
        <td><%= link_to 'Destroy', admin_post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

