      .row
        .col-xs-12.col-sm-1.col-md-2.col-lg-3
        .col-xs-12.col-sm-10.col-md-8.col-lg-6
          - if flash[:notice]
            p.text-center.alert-warning = flash[:notice]
          - if flash[:alert]
            p.text-center.alert-success = flash[:alert]
          - unless flash[:alert]
            = simple_form_for(Subscription.new, :validate => true,:html=> { multipart: true, class: "form-horizontal", role: "search" }) do |f| 
              .form-group
                .input-group
                  = f.input :email, label: false, type: "search", input_html: { class: 'form-control', placeholder: t('home.email_subscaiption') }
                  span.input-group-btn.tran-bg
                    button.btn type="submit" 
                      span.fui-clip
