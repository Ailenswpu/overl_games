          a.dropdown-toggle href="#" data-toggle="dropdown" data-user-id=(current_user.id)
            font style="font-size:15px;font-family:'Arial';" = current_user.name

            | &nbsp;&nbsp;&nbsp;
            img.top-avatar height="30" width="30" src=(image_url current_user.avatar) 
